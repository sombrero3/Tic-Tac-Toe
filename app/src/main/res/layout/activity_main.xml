<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent" android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/main_reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="520dp"
            android:text="Reset"
            app:layout_constraintEnd_toEndOf="@+id/main_title_iv"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/main_title_iv"
            app:layout_constraintTop_toBottomOf="@+id/main_title_iv" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="379dp"
            android:layout_height="398dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_title_iv"
            app:srcCompat="@drawable/back" />

        <ImageButton
            android:id="@+id/main_10_ibtn"
            android:layout_width="87dp"
            android:layout_height="84dp"
            android:layout_marginTop="42dp"
            app:layout_constraintEnd_toEndOf="@+id/main_00_ibtn"
            app:layout_constraintStart_toStartOf="@+id/main_00_ibtn"
            app:layout_constraintTop_toBottomOf="@+id/main_00_ibtn"
            app:srcCompat="@drawable/firstpic" />
        android:id="@+id/main_10_ibtn"

        <ImageButton
            android:id="@+id/main_20_ibtn"
            android:layout_width="87dp"
            android:layout_height="84dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="38dp"
            app:layout_constraintEnd_toEndOf="@+id/main_10_ibtn"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/main_10_ibtn"
            app:srcCompat="@drawable/firstpic" />

        <ImageButton
            android:id="@+id/main_00_ibtn"
            android:layout_width="88dp"
            android:layout_height="84dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="140dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_title_iv"
            app:srcCompat="@drawable/firstpic" />

        <ImageButton
            android:id="@+id/main_01_ibtn"
            android:layout_width="88dp"
            android:layout_height="84dp"
            android:layout_marginStart="41dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_00_ibtn"
            app:layout_constraintStart_toEndOf="@+id/main_00_ibtn"
            app:layout_constraintTop_toTopOf="@+id/main_00_ibtn"
            app:srcCompat="@drawable/firstpic" />

        <ImageButton
            android:id="@+id/main_02_ibtn"
            android:layout_width="88dp"
            android:layout_height="84dp"
            android:layout_marginStart="38dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_01_ibtn"
            app:layout_constraintStart_toEndOf="@+id/main_01_ibtn"
            app:layout_constraintTop_toTopOf="@+id/main_01_ibtn"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/firstpic" />

        <ImageButton
            android:id="@+id/main_11_ibtn"
            android:layout_width="87dp"
            android:layout_height="84dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_10_ibtn"
            app:layout_constraintEnd_toEndOf="@+id/main_01_ibtn"
            app:layout_constraintStart_toStartOf="@+id/main_01_ibtn"
            app:layout_constraintTop_toTopOf="@+id/main_10_ibtn"
            app:srcCompat="@drawable/firstpic" />

        <ImageButton
            android:id="@+id/main_21_ibtn"
            android:layout_width="87dp"
            android:layout_height="84dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_20_ibtn"
            app:layout_constraintEnd_toEndOf="@+id/main_11_ibtn"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/main_11_ibtn"
            app:layout_constraintTop_toTopOf="@+id/main_20_ibtn"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/firstpic" />

        <ImageButton
            android:id="@+id/main_12_ibtn"
            android:layout_width="87dp"
            android:layout_height="84dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_11_ibtn"
            app:layout_constraintEnd_toEndOf="@+id/main_02_ibtn"
            app:layout_constraintStart_toStartOf="@+id/main_02_ibtn"
            app:layout_constraintTop_toTopOf="@+id/main_11_ibtn"
            app:srcCompat="@drawable/firstpic" />

        <ImageButton
            android:id="@+id/main_22_ibtn"
            android:layout_width="87dp"
            android:layout_height="84dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_21_ibtn"
            app:layout_constraintEnd_toEndOf="@+id/main_12_ibtn"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/main_12_ibtn"
            app:layout_constraintTop_toTopOf="@+id/main_21_ibtn"
            app:srcCompat="@drawable/firstpic" />

        <ImageView
            android:id="@+id/main_win0_iv"
            android:layout_width="375dp"
            android:layout_height="388dp"
            android:layout_marginTop="110dp"
            app:layout_constraintTop_toBottomOf="@+id/main_title_iv"
            app:srcCompat="@drawable/empty"
            tools:layout_editor_absoluteX="19dp" />

        <ImageView
            android:id="@+id/main_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/xplay" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

