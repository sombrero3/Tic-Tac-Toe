<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/main_reset_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/button_black_and_white"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Reset All "
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/background_tv" />

            <TextView
                android:id="@+id/background_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="-16dp"
                android:background="#504250"
                app:layout_constraintBottom_toBottomOf="@+id/main_title_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/main_win0_iv"
                android:layout_width="0dp"
                android:layout_height="388dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/grid_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/grid_iv"
                app:srcCompat="@drawable/empty" />

            <ImageView
                android:id="@+id/grid_iv"
                android:layout_width="370dp"
                android:layout_height="398dp"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="65dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_title_iv"
                app:srcCompat="@drawable/croped_grid" />


            <ImageButton
                android:id="@+id/main_10_ibtn"
                android:layout_width="87dp"
                android:layout_height="84dp"
                app:layout_constraintBottom_toTopOf="@+id/main_20_ibtn"
                app:layout_constraintEnd_toEndOf="@+id/main_00_ibtn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/main_00_ibtn"
                app:layout_constraintTop_toBottomOf="@+id/main_00_ibtn"
                app:srcCompat="@drawable/firstpic" />

            <ImageButton
                android:id="@+id/main_20_ibtn"
                android:layout_width="87dp"
                android:layout_height="84dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/grid_iv"
                app:layout_constraintEnd_toEndOf="@+id/main_10_ibtn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/main_10_ibtn"
                app:layout_constraintTop_toBottomOf="@+id/main_10_ibtn"
                app:srcCompat="@drawable/firstpic" />

            <ImageButton
                android:id="@+id/main_00_ibtn"
                android:layout_width="88dp"
                android:layout_height="84dp"
                android:layout_marginTop="24dp"
                app:layout_constraintBottom_toTopOf="@+id/main_10_ibtn"
                app:layout_constraintEnd_toStartOf="@+id/main_01_ibtn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/grid_iv"
                app:layout_constraintTop_toTopOf="@+id/grid_iv"
                app:srcCompat="@drawable/firstpic" />

            <ImageButton
                android:id="@+id/main_01_ibtn"
                android:layout_width="88dp"
                android:layout_height="84dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_00_ibtn"
                app:layout_constraintEnd_toStartOf="@+id/main_02_ibtn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/main_00_ibtn"
                app:layout_constraintTop_toTopOf="@+id/main_00_ibtn"
                app:srcCompat="@drawable/firstpic" />

            <ImageButton
                android:id="@+id/main_02_ibtn"
                android:layout_width="88dp"
                android:layout_height="84dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_01_ibtn"
                app:layout_constraintEnd_toEndOf="@+id/grid_iv"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/main_01_ibtn"
                app:layout_constraintTop_toTopOf="@+id/main_01_ibtn"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/firstpic" />

            <ImageButton
                android:id="@+id/main_11_ibtn"
                android:layout_width="87dp"
                android:layout_height="84dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_10_ibtn"
                app:layout_constraintEnd_toEndOf="@+id/main_01_ibtn"
                app:layout_constraintStart_toStartOf="@+id/main_01_ibtn"
                app:layout_constraintTop_toTopOf="@+id/main_10_ibtn"
                app:srcCompat="@drawable/firstpic" />

            <ImageButton
                android:id="@+id/main_21_ibtn"
                android:layout_width="87dp"
                android:layout_height="84dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_20_ibtn"
                app:layout_constraintEnd_toEndOf="@+id/main_11_ibtn"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/main_11_ibtn"
                app:layout_constraintTop_toTopOf="@+id/main_20_ibtn"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/firstpic" />

            <ImageButton
                android:id="@+id/main_12_ibtn"
                android:layout_width="87dp"
                android:layout_height="84dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_11_ibtn"
                app:layout_constraintEnd_toEndOf="@+id/main_02_ibtn"
                app:layout_constraintStart_toStartOf="@+id/main_02_ibtn"
                app:layout_constraintTop_toTopOf="@+id/main_11_ibtn"
                app:srcCompat="@drawable/firstpic" />

            <ImageButton
                android:id="@+id/main_22_ibtn"
                android:layout_width="87dp"
                android:layout_height="84dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_21_ibtn"
                app:layout_constraintEnd_toEndOf="@+id/main_12_ibtn"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/main_12_ibtn"
                app:layout_constraintTop_toTopOf="@+id/main_21_ibtn"
                app:srcCompat="@drawable/firstpic" />

            <ImageView
                android:id="@+id/main_title_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/grey_300"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/xplay" />

            <TextView
                android:id="@+id/main_x_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X Wins : 0 "
                android:textSize="18sp"
                android:textColor="@color/grey_300"
                app:layout_constraintBottom_toBottomOf="@+id/main_reset_btn"
                app:layout_constraintEnd_toStartOf="@+id/main_o_score_tv"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/main_reset_btn" />

            <TextView
                android:id="@+id/main_o_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O Wins : 0 "
                android:textSize="18sp"
                android:textColor="@color/grey_300"
                app:layout_constraintBottom_toBottomOf="@+id/main_x_score_tv"
                app:layout_constraintEnd_toStartOf="@+id/main_draws_tv"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/main_x_score_tv"
                app:layout_constraintTop_toTopOf="@+id/main_x_score_tv" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/main_clear_board_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_black_and_white"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="Clear Board "
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/main_draws_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Draws : 0 "
                android:textSize="18sp"
                android:textColor="@color/grey_300"
                app:layout_constraintBottom_toBottomOf="@+id/main_o_score_tv"
                app:layout_constraintEnd_toStartOf="@+id/main_reset_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/main_o_score_tv"
                app:layout_constraintTop_toTopOf="@+id/main_o_score_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>